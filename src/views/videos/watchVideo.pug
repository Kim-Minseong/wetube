extends ../layout/base
include ../mixins/video

block content
    video(src=`/${video.videoUrl}` controls) 
    div 
        h2=video.title
        p=video.description
        small=video.createdAt
    a(href=`${video.id}/edit`) Edit Video &rarr; 
    br
    a(href=`${video.id}/delete`) Delete Video 