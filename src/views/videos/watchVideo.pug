extends ../layout/base
include ../mixins/video

block scripts
    script(src="/static/js/videoPlayer.js" defer)

block content
    div#videoContainer
        video(src=`/${video.videoUrl}` width="500") 
        div#videoControls 
            button#play Play
            button#mute Mute
            input(type="range" min="0" max="1" step="0.1" default="0.5")#volume
            div 
                span#currentTime 00 : 00
                span    /  
                span#totalTime 00 : 00
            div 
                input(type="range" min="0" value=0 step="1")#timeline
            div 
                button#fullScreen Full Screen
