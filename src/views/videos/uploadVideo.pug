extends ../layout/base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST" enctype="multipart/form-data").upload__form.default__form 
        label(for="video") Find
        input(type="text" placeholder="Video file" disabled)
        input(type="file" accept="video/*" id="video" name="video" required)
        label(for="thumbnail").thumbnail__label Find
        input(type="text" placeholder="Thumbnail" disabled)
        input(type="file" accept="image/*" id="thumbnail" name="thumbnail")
        input(type="text" placeholder="Title" name="title" required)
        input(type="text" placeholder="Description" name="description" required)
        input(type="text" placeholder="Hashtags, seperated by comma." name="hashtags" required)
        input(type="submit" value="Upload Video")