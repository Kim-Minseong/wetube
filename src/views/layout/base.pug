include ../mixins/message

doctype html 
html(lang="ko")
    head 
        include ../partials/head.pug
        block scripts
    body
        if messages.error
            +message("error",messages.error)
        if messages.info
            +message("info",messages.info)
        if messages.success
            +message("success",messages.success)
        include ../partials/header.pug
        main 
            block content
        include ../partials/footer.pug
        